<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <script src="https://cdn.tailwindcss.com"></script>
    <title>Document</title>
</head>
<body>
    <div class="main w-full min-h-screen bg-zinc-900">
        <div class="form p-10 text-white">
            <form action="/create" method="post">
                <input name="title" class="block w-full rounded-md outline-none px-5 py-2 bg-zinc-800" type="text" placeholder="title goes here">
                <textarea name="txt" class="mt-2 w-full rounded-md outline-none block px-5 py-2 resize-none bg-zinc-800" placeholder="write your tasks here"></textarea>
                <input class="mt-2 bg-blue-600 p-2 rounded-md" type="submit" value="Create Tasks">
            </form>
        </div>
        <div class="tasks flex gap-4 flex-wrap p-10">
            <% if(files.length > 0) { %>
                <%files.forEach(function(val){ %>
                        <div class="min-w-72 task rounded-md px-3 py-4 bg-zinc-800">
                        <h1 class="text-white text-xl font-bold tracking-tighter"><%= val%></h1>
                        <div class="flex w-full justify-between items-center mt-3">
                            <a class="text-blue-500 inline block" href="/files/<%= val %>">Read More.</a>      
                        <a class="text-yellow-500 font-bold" href="/edit/<%=val%>">Edit Filename</a>  
                        </div>
                    </div>
               <% }) %>
                
              <%  } else { %>
                <h1 class="text-zinc-500">No Tasks Yet.</h1>
            <% } %>
        </div>
    </div>
</body>
</html> 